<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>


<GridPane id="createProjectPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.projektikalenteri.FXMLController"  alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text text="Projektin luominen" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" fx:id="createProjectText" />

    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" minHeight="16" minWidth="69" fx:id="projectnameLabel" text="Nimi"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" minHeight="16" minWidth="69" fx:id="projectnameTextfield" />     
    
    <Text text="Syötä tiedot ja paina luo projekti!" GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="promptCreateProjectText" />
    <Button GridPane.columnIndex="1" GridPane.rowIndex="5" text="Luo projekti!" onAction="#handleLoginButtonAction" fx:id="createProjectButton" />
    <Button GridPane.columnIndex="1" GridPane.rowIndex="6" text="Peruuta!" onAction="#handleLoginButtonAction" fx:id="cancelCreateProjectButton" />
    
</GridPane>