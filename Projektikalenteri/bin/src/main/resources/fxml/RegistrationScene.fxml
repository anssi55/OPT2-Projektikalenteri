<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<GridPane id="LoginPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.projektikalenteri.FXMLController"  alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    
    <Button GridPane.columnIndex="1" GridPane.rowIndex="0" text="Kirjautuminen" onAction="#handleRegistrationSceneButtonAction" fx:id="loginSelectButton" />

    <Text text="Rekisteröityminen" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" fx:id="registrationText" />

    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" minHeight="16" minWidth="69" fx:id="usernameLabel" text="Käyttäjätunnus"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" minHeight="16" minWidth="69" fx:id="usernameTextfield" />

    <Label GridPane.columnIndex="0" GridPane.rowIndex="3" minHeight="16" minWidth="69" fx:id="passwordLabel" text="Salasana" />
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="3" minHeight="16" minWidth="69" fx:id="passwordField" />        

    <Label GridPane.columnIndex="0" GridPane.rowIndex="4" minHeight="16" minWidth="69" fx:id="passwordConfirmLabel" text="Vahvista salasana" />
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="4" minHeight="16" minWidth="69" fx:id="passwordConfirmField" />  
    
    <Label GridPane.columnIndex="0" GridPane.rowIndex="5" minHeight="16" minWidth="69" fx:id="displayNameLabel" text="Näyttönimi" />
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="5" minHeight="16" minWidth="69" fx:id="displayNameField" /> 
    
    <Button GridPane.columnIndex="1" GridPane.rowIndex="7" text="Rekisteröidy!" onAction="#handleRegistrationButtonAction" fx:id="registrationButton" />
    <Text text="Syötä tiedot ja paina rekisteröidy!" GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="promptRegistrationText" />
    
</GridPane>
